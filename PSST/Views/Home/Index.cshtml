@{
  Layout = "_Layout";
}
@using Treats.Models
<h4 class="float-right">Flavors</h4>
<h4>Sweets</h4>
<div class = "row">
  <div class="col">
    <ul>
      @if (ViewBag.Sweets.Count != 0)
      {
        @foreach (Sweet s in ViewBag.Sweets)
        {
        <li>@s.SweetName</li>
        }
      }
      else
      {
        <li>No sweets listed.</li>
      }
    </ul>
  </div>
  <div class="col">
    <ul>
      @if (ViewBag.Flavors.Count != 0)
      {
      @foreach (Flavor f in ViewBag.Flavors)
        {
        <li>@f.FlavorName</li>
        }
      }
      else
      {
        <li>No flavors listed.</li>
      }
    </ul>
  </div>
</div>
@if (User.Identity.IsAuthenticated)
{
  <div class="float-right">
    <button>@Html.ActionLink("Them Flavors", "Index", "Flavors")</button>
  </div>
  <button>@Html.ActionLink("Them Sweets", "Index", "Sweets")</button>
}
else
{
  <p>Wanna add sweets or flavors?
  @Html.ActionLink("Login", "Login", "Account")!
  </p>
}
