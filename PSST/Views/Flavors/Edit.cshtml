@{
  Layout = "_Layout";
}

@using Treats.Models
@model Treats.Models.Flavor

<h2>Edit Flavor</h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.FlavorId)

  @Html.Label("Flavor Name:")
  @Html.EditorFor(model => model.FlavorName)
  <br>
  @Html.Label("Connect to a Sweet!")
  @Html.DropDownList("SweetId")

  <input type="submit" value="Save" />
}
@if (@Model.JoinEntities.Count != 0)
{
  <br>
  <h4>Sweets connected to this Flavor:</h4>
  <ul>
    @foreach (var join in Model.JoinEntities)
    {
      <li>@join.Sweet.SweetName</li>
    }
  </ul>
}


<button>@Html.ActionLink("Go Back", "Index", "Home")</button>