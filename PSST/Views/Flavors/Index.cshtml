@{
  Layout = "_Layout";
}
@using Treats.Models;
@model List<Treats.Models.Flavor>

@if (@Model.Count == 0)
{
  <h3>No flavors are currently in the database</h3>
}
<ul>
  @foreach(Flavor f in Model)
  {
    <li>@Html.ActionLink($"{f.FlavorName}", "Details", new {id = f.FlavorId})</li>
  }
</ul>
@Html.ActionLink("Add new Flavor", "Create")
<br>
@Html.ActionLink("Go Back", "Index", "Home")
